<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Server.Views"
             xmlns:Properties="clr-namespace:Server.Properties" x:Class="Server.Views.FilePath"
             mc:Ignorable="d" Height="49.8" Width="329.8">
    <Grid Margin="5">
        <TextBox x:Name="tb_path" Height="23" Margin="10,10,74.6,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.5,-0.217" IsReadOnly="True" Text="{Binding Source={x:Static Properties:Settings.Default}, Path=rootPath}"/>

        <Button x:Name="btn_open" Content="..." Margin="260,11,14.6,0" VerticalAlignment="Top" Click="btn_Click"/>
    </Grid>
</UserControl>
